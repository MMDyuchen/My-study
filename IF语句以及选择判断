第一个  一个作业
-----------------------------------------------------
//if 三分制条件语句
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>

int main()
{
	int age = 25;
	if(age<18)
		printf("%dchild\n",age);
	else if(age >= 18 && age <= 20)
		printf("%dteenage\n",age);
	else
		printf("%dman\n",age);
	return 0;
}


第二个  一个作业
-----------------------------------------------------
//判断一个数是否为奇数
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int a;	
	printf("Give me the number:\n");	
	scanf("%d", &a) ;	
	if(a%2 == 0)
		printf("No");
	else
		printf("Yes");
	return 0 ;	
}

第三个  while 循环语句
-----------------------------------------------------
//输出1~100之间的奇数
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int i = 1;
	while(i<100)
	{
		printf("%d ",i);
		i += 2;
	}
	return 0;	
}

第四个 switch...case...break 语句
-----------------------------------------------------
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int day = 0;
	scanf("%d", &day);
	switch(day)
	{
	case 1:
		printf("Monday\n");
		break;
	case 2:
		printf("Tuesday\n");
		break;
	case 3:
		printf("Wednesday\n");
		break;
	case 4:
		printf("Thursday\n");
		break;
	case 5:
		printf("Friday\n");
		break;
	case 6:
		printf("Saturday\n");
		break;
	case 7:
		printf("Sunday\n");
		break;
	}
	return 0;
}

第五个  while循环的一个小实验
-----------------------------------------------------
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int age = 7;
	while(age<18)
		{
		printf("He is a child!\n");
		age ++;
		}
		printf("He is a adult!");
	return 0;
}
